<% layout('layout') -%>

<div id="intro" class="section scrollspy">
  <div class="container">
    <div class="card-panel row">
      <form class="col s12" method="post">
        <div class="row">
          <div class="col s12">
            <h2 class="center header text_h2"><span class="span_h2"> Add Event</span></h2>
          </div>
          <% if(errors.length > 0) { %>

          <div class="card-panel col s12">
            <p><span class="red-text text-darken-2"> <%= errors %></span>
              <p>
          </div>

          <% } %>
        </div>

        <div class="row">
          <div class="input-field col l12 m12 s12">
            <input placeholder="Enter event name here" id="name" name="name" type="text" class="validate">
            <label for="name">Event Name (Required)</label>
          </div>

        </div>
        <div class="row">
          <div class="input-field col l6 m12 s12">
            <textarea placeholder="Enter description" id="para" name="para" class="validate"></textarea>
            <label for="para">Description (Required)</label>
          </div>

          <div class="input-field col l6 m12 s12">
            <textarea placeholder="Enter impact" id="impact" name="impact" class="validate"></textarea>
            <label for="impact">Impact (Required)</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col l6 m12 s12">
            <!-- <input placeholder="Select Year" id="year" type="text" class="validate">
                <label for="year">Year</label> -->
            <select id="eventCategory" name="eventCategory">
              <option value="Upcoming">Upcoming</option>
              <option value="Recent">Recent</option>
              <option value="Regular">Regular</option>
            </select>
            <label>Event Category</label>
          </div>

          <div class="input-field col l6 m12 s12">
            <input placeholder="Enter priority" id="priority" name="priority" type="text" class="validate">
            <label for="priority">Priority</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col l6 m12 s12">
            <input placeholder="Enter image1 address" id="image1" name="image1" type="text" class="validate">
            <label for="image1">Image1 address</label>
          </div>
          <div class="input-field col l6 m12 s12">
            <input placeholder="Enter image2 address" id="image2" name="image2" type="text" class="validate">
            <label for="image2">Image2 address</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col l12 m12 s12 center">
            <button class="btn waves-effect waves-light" type="submit" name="action">Post
              <i class="mdl-material-icons fa fa-send right"></i>
            </button>
          </div>
        </div>

      </form>
    </div>
  </div>
</div>